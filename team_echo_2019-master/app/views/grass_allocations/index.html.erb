<p id="notice"><%= notice %></p>

<h2 style = "font-family: Helvetica;">Grass Allocations</h2>

<%= paginate @beck,  left: 3, right: 3, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm"  %>

<!-- The following code was based on a video found on www.driftingruby.com/episodes/importing-and-exporting-csv-data -->

<%= link_to "Export CSV", grass_allocations_url(format: :csv), class: 'btn btn-primary' %>

<%= link_to 'New Grass Allocation', new_grass_allocation_path, class: "btn btn-success" %>

<table>
  <thead>
    <tr>
      <th style = "font-family: Helvetica;">Grass Allocation</th>
      <th style = "font-family: Helvetica;">Grass</th>
      <th style = "font-family: Helvetica;">Plotsubplot</th>
      <th style = "font-family: Helvetica;">Year Observation</th>
      <th style = "font-family: Helvetica;">Percentage 100 DM GM 1</th>
      <th style = "font-family: Helvetica;">Percentage 100 DM GM 2</th>
      <th style = "font-family: Helvetica;">Percentage 100 DM GM 3</th>
      <th style = "font-family: Helvetica;">Percentage 100 DM GM 4</th>
      <th style = "font-family: Helvetica;">Percentage 100 DM GM 5</th>
      <th style = "font-family: Helvetica;">Percentage 100 DM GM 6</th>
      <th style = "font-family: Helvetica;">Percentage 100 DM Silage1</th>
      <th style = "font-family: Helvetica;">Percentage 100 DM Silage2</th>
      <th style = "font-family: Helvetica;">Digestibility Value 1</th>
      <th style = "font-family: Helvetica;">Digestibility Value 2</th>
      <th style = "font-family: Helvetica;">Me 1</th>
      <th style = "font-family: Helvetica;">Me 2</th>
      <th style = "font-family: Helvetica;">LUGD</th>
      <th style = "font-family: Helvetica;">Percentage Prg a</th>
      <th style = "font-family: Helvetica;">Percentage Tim a</th>
      <th style = "font-family: Helvetica;">Percentage Wc a</th>
      <th style = "font-family: Helvetica;">Percentage Tug a</th>
      <th style = "font-family: Helvetica;">Percentage Tw a</th>
      <th style = "font-family: Helvetica;">pH</th>
      <th style = "font-family: Helvetica;">P</th>
      <th style = "font-family: Helvetica;">K</th>
      <th style = "font-family: Helvetica;">Mg</th>
      <th style = "font-family: Helvetica;">OM</th>
      <th style = "font-family: Helvetica;">Replication</th>
      <th style = "font-family: Helvetica;">Rotation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beck.each do |grass_allocation| %>
      <tr>
        <td><%= grass_allocation.grass_allocation_id %></td>
        <td><%= grass_allocation.grass_id %></td>
        <td><%= grass_allocation.plotsubplot_id %></td>
        <td><%= grass_allocation.year_observation %></td>
        <td><%= grass_allocation.percentage_100_dm_gm1 %></td>
        <td><%= grass_allocation.percentage_100_dm_gm2 %></td>
        <td><%= grass_allocation.percentage_100_dm_gm3 %></td>
        <td><%= grass_allocation.percentage_100_dm_gm4 %></td>
        <td><%= grass_allocation.percentage_100_dm_gm5 %></td>
        <td><%= grass_allocation.percentage_100_dm_gm6 %></td>
        <td><%= grass_allocation.percentage_100_dm_silage1 %></td>
        <td><%= grass_allocation.percentage_100_dm_silage2 %></td>
        <td><%= grass_allocation.d_value_1 %></td>
        <td><%= grass_allocation.d_value_2 %></td>
        <td><%= grass_allocation.me_1 %></td>
        <td><%= grass_allocation.me_2 %></td>
        <td><%= grass_allocation.lugd %></td>
        <td><%= grass_allocation.percentage_prg_a %></td>
        <td><%= grass_allocation.percentage_tim_a %></td>
        <td><%= grass_allocation.percentage_wc_a %></td>
        <td><%= grass_allocation.percentage_tug_a %></td>
        <td><%= grass_allocation.percentage_tw_a %></td>
        <td><%= grass_allocation.ph %></td>
        <td><%= grass_allocation.p %></td>
        <td><%= grass_allocation.k %></td>
        <td><%= grass_allocation.mg %></td>
        <td><%= grass_allocation.om %></td>
        <td><%= grass_allocation.replication %></td>
        <td><%= grass_allocation.rotation %></td>
       
          
        <td><%= link_to 'Show', grass_allocation, class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_grass_allocation_path(grass_allocation), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', grass_allocation, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @beck,  left: 3, right: 3, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm"  %>
<%= link_to 'New Grass Allocation', new_grass_allocation_path, class: "btn btn-success" %>
